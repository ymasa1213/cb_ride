<!DOCTYPE html>
<html>
  <head>
    <title>CB-Ride</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">CB-Ride</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "マイページ", user_path(current_user), class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規投稿", new_post_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿一覧", posts_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザー", users_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "お問い合わせ", index_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
           <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class:"nav-link active" %>
        </li>
        <% elsif admin_signed_in? %>
        <li class="nav-item">
          <%= link_to "会員一覧", admin_users_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
           <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class:"nav-link active" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "About", about_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class:"nav-link active" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <%= yield %>
    <footer class="footer mt-5">
      <nav class="navbar">
        <span class="navbar-text m-auto">
            <p>CB-Ride portfolio</p>
        </span>
      </nav>
    </footer>
  </body>
</html>
  </body>
</html>

