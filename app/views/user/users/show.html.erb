<div class="container">
  <h2 class="text-center mt-3 mb-5"><%= @user.name %>さんの投稿</h2>
  <div class="row">
    <div class="text-center col-md-3">
      <%= render 'user/users/info', user: @user %>
    </div>
      <% @posts.each do |post| %>
        <div class="col-md-3 mt-4">
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image,size:"300x200",fallback: "no_image.jpg", class:"card-img-top"; %>
          <% end %>
          <div class="card"%>
            <div class="card-body text-center">
              <h4 class="card-title"><%=post.title %></h4>
              <div class="row">
                <div class="col-9 mx-auto">
                  <span><%= link_to post_path(post.id), class:"text-dark" do %></span>
                    <i class="far fa-comment mb-3"> <%= post.comments.count %></i>
                  <% end %>
                  <p id="like_buttons_<%= post.id %>">
                    <%= render 'user/likes/like', post: post %>
                  </p>
                  <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>