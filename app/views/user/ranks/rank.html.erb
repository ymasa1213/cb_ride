<div class="container">
  <h1><i class="fas fa-heart mt-5" style="color:#ff0000;"></i>ランキングTOP3</h1>
  <div class="row">
    <% @post_like_ranks.first(3).each.with_index(1) do |post, i| %>
    <div class="col-md-4 mt-4">
     <strong><h3><%= i %>位</h3></strong>
       <%= link_to post_path(post.id) do %>
         <%= attachment_image_tag post, :image,size:"400x300",fallback: "no_image.jpg", class:"card-img-top"; %>
       <% end %>
       <div class="card"%>
         <div class="card-body text-center">
         <h4 class="card-title"><%=post.title %></h4>
           <div class="row">
             <div class="col-4">
               <%= link_to user_path(post.user_id), class:"text-dark" do %>
                 <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60', class:"rounded-circle"; %><br>
                 <span><i class="fas fa-user mt-4"></i>  <%= post.user.name %></span>
               <% end %>
             </div>
             <div class="col-8">
               <span><%= link_to post_path(post.id), class:"text-dark" do %></span>
                 <i class="far fa-comment mb-3"> <%= post.comments.count %></i>
               <% end %>
               <p id="like_buttons_<%= post.id %>">
                 <%= render 'user/likes/like', post: post %>
               </p>
               <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
             </div>
           </div>
          </div>
       </div>
    </div>
    <% end %>
  </div>
</div>