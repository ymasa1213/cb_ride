<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mt-4">
        <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image,size:"400x300",fallback: "no_image_person.jpg", class:"card-img-top"; %>
        <% end %>
        <div class="card"%>
          <div class="card-body text-center">
            <h4 class="card-title"><%=post.title %></h4>
            <div class="row">
              <div class="col-4">
                <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image_person.jpg", size:'60x60', class:"rounded-circle"; %><br>
                <span><i class="fas fa-user mt-4"></i>  <%= post.user.name %></span>
              </div>
              <div class="col-8">
                <span><%= link_to post_path(post.id), class:"text-dark" do %></span>
                  <i class="far fa-comment mb-3"> <%= post.comments.count %></i>
                <% end %>
                <p id="like_buttons_<%= post.id %>">
                <%= render 'user/likes/like', post: post %>
                </p>
                <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>