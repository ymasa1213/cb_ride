<div class= "container post-detail">
  <h2 class= "row">投稿詳細</h2>
  <div class= "col-md-9">
    <%= attachment_image_tag @post, :image, fallback: "no_image.jpg" %>
    <%= @post.title %>
    <%= @post.body %>
    <table>
      <% @post.comments.each do |comment| %>
        <tr>
          <td><%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'60x60' %><br>
          <%= comment.user.name %></td>
          <% end %>
          <td><%= comment.comment %></td>
          <% if comment.user == current_user %>
          <td><%= link_to "Destroy", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <%= form_with(model:[@post, @comment], local: true) do |f| %>
      <%= f.text_area :comment, size:"100x5", rows:'5' %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
</div>