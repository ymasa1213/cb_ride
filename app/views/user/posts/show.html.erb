<div class= "container">
  <div class= "row">
    <div class= "text-center col-md-3 mt-5">
      <%= render 'user/users/info', user: @user %>
    </div>
  <div class= "col-md-8 offset-md-1 mt-5">
    <h2><%= @post.title %></h2>
    <%= attachment_image_tag @post, :image,size:"640x450", fallback: "no_image.jpg" %>
    <div id="like_buttons_<%= @post.id %>", class= "text-right mr-5">
    <%= render 'user/likes/like', post: @post %>
    </div>
    <h3>本文</h3>
    <%= @post.body %>
    <br>
    <% if current_user == @user %>
      <%= link_to "編集する", edit_post_path(@post.id), class:"btn btn-primary mt-3 mr-3" %>
      <%= link_to "削除する", post_path(@post.id), method: :delete, class:"btn btn-danger mt-3", data: { confirm: '本当に削除しますか？' } %>
    <% end %>
    <br>
    <h3 class= "mt-5">コメント</h3>
    <table>
      <% @post.comments.each do |comment| %>
        <tr>
          <td><%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'60x60', class:"mr-4" %><br>
          <%= comment.user.name %></td>
          <% end %>
          <td><%= comment.comment %></td>
          <% if comment.user == current_user %>
          <td><%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger ml-3" , data: { confirm: '本当に削除しますか？' }%></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <%= form_with(model:[@post, @comment], local: true) do |f| %>
      <%= f.text_area :comment, size:"100x5", rows:'5' %>
      <%= f.submit "コメントする",class: "btn btn-success" %>
    <% end %>
  </div>
</div>
</div>